<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Palindrome Game!"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter a word"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edit_text_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ex: hello, racecar, mom, etc."
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter if this word is a palindrome (true or false)"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edit_text_boolean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="true or false"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter if this word starts with a vowel (yes or no)"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edit_text_vowel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="yes or no"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_margin="5dp"
        android:onClick="launchSecondActivity"/>
</LinearLayout>